%section
  .tabs.tabs-style-bar
    %nav
      %ul
        %li
          %a.icon.icon-home{:href => "#section-bar-1"}
            %span Job
        %li
          %a.icon.icon-box{:href => "#section-bar-2"}
            %span Details
        %li
          %a.icon.icon-display{:href => "#section-bar-3"}
            %span Cover Letter
        %li
          %a.icon.icon-upload{:href => "#section-bar-4"}
            %span Map
        %li
          %a.icon.icon-tools{:href => "#section-bar-5"}
            %span Friends
    .content-wrap
      %section#section-bar-1
        #iframe-container
          %iframe{ :width => "100%", :height => "100%" }
      %section#section-bar-2
        %p.detail Job Title: #{@job["jobtitle"]}
        %p.detail Company: #{@job["company"]}
        %p.detail Location: #{@job["formattedLocation"]}
        %p.detail Country: #{@job["country"]}
        %p.detail Snippet: #{@job["snippet"]}
        %p.detail Url: #{ link_to "Job Link", @job["url"], target: "_blank" }
        %p.detail Posted: #{@job["formattedRelativeTime"]}

      %section#section-bar-3
        %p.detail Admin Save - temporary
        = link_to "Interested In Job", user_job_details_path(current_user, JobDetail.new, jobkey: @job["jobkey"]), method: :post, remote: true


        - if @job_detail
          = form_for([current_user, @job_detail], remote: true) do |f|
            = f.text_area :cover_letter
            = f.submit "Save"
        / - if @job_record && @job_record.cover_letter
        /   = form_for([current_user, @job_record, @cover_letter], remote: true, url: user_job_cover_letter_path(current_user, @job_record)) do |f|
        /     = f.text_area :letter
        /     = f.submit "save"
        / - else
        /   = form_for([current_user, @job_record, CoverLetter.new()], remote: true, url: user_job_cover_letter_path(current_user, @job_record)) do |f|
        /     = f.text_area :letter
        /     = f.submit "save"
          
      %section#section-bar-4
        %p 4
      %section#section-bar-5
        %p 5