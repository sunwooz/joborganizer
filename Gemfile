source 'https://rubygems.org'

gem 'rails', '4.2.3'

#database
gem 'pg'
#server
gem 'puma'
#api gems
gem 'indeed-ruby'
gem 'indeed_api'
gem "linkedin"
#authentication
gem 'devise'
gem "omniauth"
gem "omniauth-linkedin"
#asset
gem 'haml-rails'
gem 'jquery-rails'
gem 'tinymce-rails'
gem 'bootstrap-sass', '~> 3.3.6'
gem "multi_json"
gem 'coffee-rails', '~> 4.1.0'
gem 'uglifier', '>= 1.3.0'
gem 'sass-rails', '~> 5.0'
#development
gem 'pry'
gem "binding_of_caller"
#security
gem 'rack-cors', :require => 'rack/cors'

